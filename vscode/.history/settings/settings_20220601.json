    //字体默认配置: Consolas, 'Courier New', monospace
    //使用Git bash字体: Lucida Sans Typewriter
    //编程字体: Droid Sans Mono Slashed、JetBrains Mono、Cascadia Code Light、Lucida Console、Souce Code Pro、Monaco
    //常用字体: "JetBrains Mono,Droid Sans Mono Slashed,Comic Mono,Lucida Console,Consolas,Source Code Pro",
    //设置字体 英文:JetBrains Mono，中文:微软雅黑
    "editor.fontFamily": "JetBrains Mono,'微软雅黑',Consolas",
    //启用字体连字，如 !=、===是否连为一体。支持此特性字体:JetBrains Mono、Fira Code
    "editor.fontLigatures": true,
    //字体大小(px)
    "editor.fontSize": 14,
    //Jetbrains Fleet Theme配置: JetBrains Mono，lineHeight=1.6
    //如果分辨率高就设置大一点1.6，小就设置为1.45
    "editor.lineHeight": 1.5,
    //设置字体精细。一般为400 或 normal，如果是Cascadia Code，可以设置为300，Cascadia Code Light不用设置
    "editor.fontWeight": "normal",
    //字符间距，一般为0.3-0.6
    "editor.letterSpacing": 0.3,
    //光标样式
    "editor.cursorStyle": "line",
    // 当 `editor.cursorStyle` 设置为 `line` 时，控制光标的宽度
    "editor.cursorWidth": 2,
    //光标的动画样式
    "editor.cursorBlinking": "expand",
    //启用平滑插入动画
    "editor.cursorSmoothCaretAnimation": true,
    //显示行号：绝对值(还有相对行号)
    "editor.lineNumbers": "on",
    //是否显示行号边距(如果不显示配置时没有编辑图标)
    "editor.glyphMargin": true,
    //启用代码折叠
    "editor.folding": true,
    //在编辑区视图边界换行
    "editor.wordWrap": "wordWrapColumn",
    //换行宽度
    "editor.wordWrapColumn": 100,
    //缩略图设置(侧边栏高亮后不需要了)
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 100,
    "editor.minimap.size": "fit",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": true,
    //启用后，可以拖放移动选中的内容
    "editor.dragAndDrop": true,
    //控制编辑器是否应呈现空白字符
    "editor.renderWhitespace": "selection",
    //插入Tab键时替换为空格，设置editor.detectIndentation后失效
    "editor.insertSpaces": true,
    //没有选中内容时复制当前行
    "editor.emptySelectionClipboard": true,
    //在一定数量的等宽字符后显示垂直标尺，若数组为空，则不绘制标尺
    "editor.rulers": [
        100,
        120
    ],
    // 控制键入时是否应自动显示建议
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    //建议(智能提示)显示延迟时间(毫秒)，太快容易误触发代码段
    "editor.quickSuggestionsDelay": 5,
    //智能提示选择项
    "editor.suggestSelection": "first",
    //在其它建议上面显示代码段
    "editor.snippetSuggestions": "top",
    //在活动代码段内时是否显示智能提示
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    //在智能提示没显示时知道代码段缩写直接按tab键展开
    "editor.tabCompletion": "on",
    //滚动时使用动画
    "editor.smoothScrolling": true,
    //自动输入结束括号
    "editor.autoClosingBrackets": "always",
    //删除括号时自动删除结束括号
    "editor.autoClosingDelete": "always",
    //括号突出显示颜色（自动分配不同颜色）
    "editor.bracketPairColorization.enabled": true,
    //突出显示活动括号
    "editor.guides.highlightActiveBracketPair": true,
    //仅为活动括号显示参考线
    "editor.guides.bracketPairs": "active",
    //不显示缩进参考线
    "editor.guides.indentation": false,
    //每个括号有独立的颜色池
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    //重命名之前预览变更
    "editor.rename.enablePreview": true,
    //粘贴内容时自动调整缩进
    "editor.autoIndent": "advanced",
    //粘贴内容时自动格式化
    "editor.formatOnPaste": true,
    //代码编辑保存时自动格式化
    "editor.formatOnSave": true,
    //禁用后，按住Ctrl+滑轮 不会缩放字体
    "editor.mouseWheelZoom": false,
