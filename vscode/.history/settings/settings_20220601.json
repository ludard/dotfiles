    //多光标快捷键:ctrl(默认Alt)
    "editor.multiCursorModifier": "ctrlCmd",
    //启用后，将在保存文件时剪裁尾随空格
    "files.trimTrailingWhitespace": true,
    //打开文件自动解析文件编码
    "files.autoGuessEncoding": true,
    //光标总是自动乱跳，这是自动格式化问题
    "files.autoSaveDelay": 5000,
    //启用自定义文件对话框
    "files.simpleDialog.enable": true,
    //比较差异时不忽略空格
    "diffEditor.ignoreTrimWhitespace": false,
    //让函数(名)和后面的大括号之间加个空格
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    //主边栏和活动栏位置：右边(不影响左边代码)
    "workbench.sideBar.location": "right",
    //颜色主题
    "workbench.colorTheme": "Jetbrains Fleet",
    //文件图标
    "workbench.iconTheme": "material-icon-theme",
    //侧边栏图标
    "workbench.productIconTheme": "developer-icons",
    //启用本地文件历史记录
    "workbench.localHistory.enabled": true,
    //本地文件历史记录最大数:30。超过后丢弃最早的记录
    "workbench.localHistory.maxFileEntries": 30,
    //历史记录文件大小(256KB)，大文件不记录。
    "workbench.localHistory.maxFileSize": 256,
    //保留命令历史数量
    "workbench.commandPalette.history": 20,
    //启动后没有打开编辑器显示首页
    "workbench.tips.enabled": true,
    //启动后显示编辑页
    "workbench.startupEditor": "newUntitledFile",
    //启用平滑滚动动画
    "workbench.list.smoothScrolling": true,
    //关闭 固定打开的编缉器(没什么用)
    "explorer.openEditors.visible": 0,
    //保存时自动修复
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    //高亮显示非ASCII字符
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    //{Syntax Highlighter}插件配置，增强配色显示
    "editor.semanticTokenColorCustomizations": {
        "enabled": true, // enable for all themes
        "[Default Dark+]": {
            "enabled": true // enable for a particular theme
        }
    },
    //调试工具栏设为固定位置
    "debug.toolBarLocation": "docked",
    //Live Server预览端口，实时预览网页内容
    "liveServer.settings.port": 5051,
    //打开设置时以界面方式展示(ui 或 json)
    "workbench.settings.editor": "ui",
    //"workbench.statusBar.feedback.visible": true,
    //发送报告
    "telemetry.telemetryLevel": "error",
    //显示扩展建议，如文件类型对应的高亮扩展
    "extensions.ignoreRecommendations": false,
    //扩展插件自动更新
    "extensions.autoUpdate": true,
    //软件更新：使用手动更新
    "update.mode": "manual"
