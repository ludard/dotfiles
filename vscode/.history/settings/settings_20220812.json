    //字体默认配置: Consolas, 'Courier New', monospace
    //使用Git bash字体: Lucida Sans Typewriter
    //编程字体: Droid Sans Mono Slashed、JetBrains Mono、Cascadia Code Light、Lucida Console、Source Code Pro、Monaco、DejaVu Sans Mono
    //常用字体: "JetBrains Mono Light,Droid Sans Mono Slashed,Comic Mono,Lucida Console,Consolas,Source Code Pro",
    //设置字体 英文:JetBrains Mono Light，中文:微软雅黑
    //Dark主题使用Light清晰一些，Light正常清楚一些
    //"JetBrains Mono Light,'微软雅黑',Consolas"
    "editor.fontFamily": "JetBrains Mono Light,'微软雅黑',Consolas",
    // "terminal.integrated.fontFamily": "'Cascadia Code'"
    //启用字体连字，如 !=、===是否连为一体。支持此特性字体:JetBrains Mono、Fira Code
    "editor.fontLigatures": true,
    //字体大小(px)
    "editor.fontSize": 13.5,
    //Jetbrains Fleet Theme配置: JetBrains Mono，lineHeight=1.4,letterSpacing=0.3
    //行高 如果分辨率高就设置大一点1.6，小就设置为1.45
    "editor.lineHeight": 1.4,
    //设置字体精细。一般为400 或 normal，如果是Cascadia Code，可以设置为300，Cascadia Code Light不用设置
    "editor.fontWeight": "normal",
    //字符间距，一般为0.3-0.6
    "editor.letterSpacing": 0.3,
    //光标样式 line 竖线条，underline 下划线
    "editor.cursorStyle": "line",
    // 当 `editor.cursorStyle` 设置为 `line` 时，控制光标的宽度
    "editor.cursorWidth": 2,
    //光标的动画样式。blink 最常用，expand 最有个性,solid 静止不动，smooth 最平滑淡入淡出
    "editor.cursorBlinking": "blink",
    //启用平滑插入动画
    "editor.cursorSmoothCaretAnimation": true,
    //显示行号：绝对值(还有相对行号)
    "editor.lineNumbers": "on",
    //是否显示行号边距(如果不显示配置时没有编辑图标)
    "editor.glyphMargin": true,
    //启用代码折叠
    "editor.folding": true,
    //在编辑区视图边界换行
    "editor.wordWrap": "wordWrapColumn",
    //换行宽度
    "editor.wordWrapColumn": 100,
    //缩略图设置(侧边栏高亮后不需要了)
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 100,
    "editor.minimap.size": "fit",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": true,
    //启用后，可以拖放移动选中的内容
    "editor.dragAndDrop": true,
    //控制编辑器是否应呈现空白字符
    "editor.renderWhitespace": "selection",
    //插入Tab键时替换为空格，设置editor.detectIndentation后失效
    "editor.insertSpaces": true,
    //没有选中内容时复制当前行
    "editor.emptySelectionClipboard": true,
    //在一定数量的等宽字符后显示垂直标尺，若数组为空，则不绘制标尺
    "editor.rulers": [
        80,
        100,
        120
    ],
    // 控制键入时是否应自动显示建议
    "editor.quickSuggestions": {
        //true:弹窗提示 inline:显示为虚拟文本 false:不显示
        "strings": "inline",
        "comments": "inline",
        "other": true,
    },
    //建议(智能提示)显示延迟时间(毫秒)，太快容易误触发代码段
    "editor.quickSuggestionsDelay": 5,
    //在智能提示没显示时知道代码段缩写直接按tab键展开
    //如果禁用下面2项设置无法使用
    "editor.tabCompletion": "on",
    //建议显示为虚拟文本，类似Copilot，如果建议符合预期按tab键确定
    //https://github.com/microsoft/vscode/issues/126375
    "editor.suggest.preview": true,
    "editor.inlineSuggest.enabled": true,
    "editor.parameterHints.enabled": true,
    //确定智能补全提示后是否覆盖当前单词  insert插入不覆盖  replace覆盖单词
    "editor.suggest.insertMode": "replace",
    //代码段的名称是随智能提示一起显示，还是只显示在详细信息面板中。 true:一起显示
    //详细信息面板有可能是隐藏的，需要用鼠标点击一下代码段的名称显示出来
    //详细信息面板的位置默认在右侧，可以缩小编辑器窗口面板就随着自动固定到下面了
    "editor.suggest.showInlineDetails": true,
    //在活动代码段内是否启用提示建议
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    //智能提示选择项 first:固定顺序始终选中第一项
    "editor.suggestSelection": "recentlyUsedByPrefix",
    //在其它建议上面显示代码段 top:在其它代码上面显示代码段
    "editor.snippetSuggestions": "top",
    "editor.suggest.showInterfaces": true,
    //滚动时使用动画
    "editor.smoothScrolling": true,
    //自动输入结束括号
    "editor.autoClosingBrackets": "always",
    //删除括号时自动删除结束括号
    "editor.autoClosingDelete": "always",
    //括号突出显示颜色（自动分配不同颜色）
    "editor.bracketPairColorization.enabled": false,
    //每个括号有独立的颜色池
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    //突出显示活动括号
    "editor.guides.highlightActiveBracketPair": true,
    //不显示缩进参考线
    "editor.guides.indentation": false,
    //是否显示括号参考线 "active" 仅活动代码块显示，true 显示，false 不显示
    "editor.guides.bracketPairs": false,
    //禁用后，按住Ctrl+滑轮 不会缩放字体
    "editor.mouseWheelZoom": false,
    //多光标快捷键:ctrl(默认Alt)
    "editor.multiCursorModifier": "ctrlCmd",
    //启用列选择。启用后向下选择自动列模式，按 Alt再选择为普通模式。如果禁用，使用 Alt+Shift 进行列选择
    "editor.columnSelection": false,
    //双击选中文本的分隔符，加上中文分隔符（、，。“”？！） 去除 -
    //默认："`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.（、，。“”？！）<>/?",
    //重命名之前预览变更
    "editor.rename.enablePreview": true,
    //鼠标悬停提示上时全部内容一直可见(不用滚动内容)
    "editor.hover.sticky": true,
    //粘贴内容时自动调整缩进
    "editor.autoIndent": "advanced",
    //粘贴内容时自动格式化
    "editor.formatOnPaste": true,
    //代码编辑保存时自动格式化
    "editor.formatOnSave": true,
    //保存时自动修复
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    //高亮显示非ASCII字符
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    //让函数(名)和后面的大括号之间加个空格
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    //启用后，将在保存文件时剪裁尾随空格
    "files.trimTrailingWhitespace": true,
    //打开文件自动解析文件编码
    "files.autoGuessEncoding": true,
    //光标总是自动乱跳，这是自动格式化问题
    "files.autoSaveDelay": 5000,
    //启用自定义文件对话框
    "files.simpleDialog.enable": true,
    //比较差异时不忽略空格
    "diffEditor.ignoreTrimWhitespace": false,
    //主题设置
    "workbench.colorTheme": "freeCodeCamp Dark Theme",
    //常用暗色主题：
    //一等: Jetbrains Fleet、GitHub Blue、Starfall Palenight、Default Dark+
    //二等: freeCodeCamp Dark Theme、Mariana、GitHub Dark Default、Tokyo Night Storm、
    // Cobalt2、Atom One Dark、Oceanic Next (dimmed bg)、
    // Monokai Pro (Filter Octagon)、Penumbra Dark Contrast+
    // Slack Theme Dark Mode、Slack Theme Aubergine Dark、
    //亮色主题：Community Material Theme Lighter High Contrast（Material Theme主题包）
    // Slack Theme Hoth、Bluloco Light、Atom One Light、Soda、
    //主题在线预览：https://vscodethemes.com
    //文件图标
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.color": "#42a5f5", //default:#42a5f5 #A5D6F5
    //侧边栏图标
    "workbench.productIconTheme": "developer-icons",
    //主题颜色是否语义(包名函数名等)突出显示
    "editor.semanticHighlighting.enabled": true,
    // {Syntax Highlighter}插件配置，增强主题配色显示
    "editor.semanticTokenColorCustomizations": {
        "enabled": true, // enable for all themes
        "[Default Dark+]": {
            "enabled": false // enable for a particular theme
        },
        "[Jetbrains Fleet]": {
            "enabled": true //启用后可以高亮Go包名
        },
        "[freeCodeCamp Dark Theme]": {
