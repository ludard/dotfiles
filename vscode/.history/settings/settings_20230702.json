    "[Atom One Dark]": {
      "enabled": false
    },
    "[One Monokai]": {
      "enabled": true,
      "rules": {
        "namespace": "#61afef"
      }
    }
  },
  //重写主题样式 要符合TextMate语法
  //https://code.visualstudio.com/api/language-extensions/syntax-highlight-guide#textmate-grammars
  "editor.tokenColorCustomizations": {
    //要启用重写样式需要设置："editor.semanticHighlighting.enabled": false
    "[Nord]": {
      // 重新覆盖注释和逗号颜色
      "comments": "#7b88a1",
      "textMateRules": [
        {
          "scope": "punctuation.other.comma.go",
          "settings": {
            "foreground": "#81a1c1"
          }
