  */
  /**
    低分辨率配置：
    "editor.fontFamily": "MesloLGS NF,'微软雅黑', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "window.zoomLevel": 0.2,
    "editor.lineHeight": 1.4,
    "editor.fontWeight": "normal",
    "editor.letterSpacing": 0.3,
    "workbench.colorTheme": "grapevine",
  */
  //字体默认配置: Consolas, 'Courier New', monospace
  //使用Git bash字体: Lucida Sans Typewriter
  //编程字体: Droid Sans Mono Slashed、JetBrains Mono、Cascadia Code Light、Lucida Console、Source Code Pro、Monaco、DejaVu Sans Mono、Roboto Mono、Input Mono
  //常用字体: "JetBrains Mono Light,Droid Sans Mono Slashed,Comic Mono,Lucida Console,Consolas,Cascadia Code Light,Fira Code Light,MesloLGS NF",
  //设置字体 英文:MesloLGS NF，中文:微软雅黑
  //Dark主题使用Light清晰一些，Light正常清楚一些
  //"JetBrains Mono Light,Cascadia Mono Light,MesloLGS NF,'微软雅黑',Consolas"
  "editor.fontFamily": "MesloLGS NF,'微软雅黑', Consolas, 'Courier New', monospace",
  // "terminal.integrated.fontFamily": "'Cascadia Code Light'",
  //启用字体连字，如 !=、===是否连为一体。支持此特性字体:JetBrains Mono、Fira Code
  "editor.fontLigatures": true,
  //字体大小(px) MesloLGS NF/Monaco:13,JetBrains Mono:13.5,Cascadia Code 14
  "editor.fontSize": 13.5,
  //窗口缩放，如果字体较小可以设置大一点。Lightbulb 主题设为0.45
  "window.zoomLevel": 0.2,
  //Jetbrains Fleet Theme配置: JetBrains Mono，lineHeight=1.4,letterSpacing=0.3
  //行高 如果分辨率高就设置大一点1.6，小就设置为1.45
  "editor.lineHeight": 1.4,
  //设置字体精细。一般为400 或 normal，如果是Cascadia Mono，可以设置为300，Cascadia Code Light不用设置
  "editor.fontWeight": "normal",
  //字符间距，一般为0.3-0.6
  "editor.letterSpacing": 0.3,
  //光标样式 line 竖线条，underline 下划线
  "editor.cursorStyle": "line",
  // 当 `editor.cursorStyle` 设置为 `line` 时，控制光标的宽度
  "editor.cursorWidth": 2,
  //光标的动画样式。blink 最常用，expand 最个性,solid 静止不动，smooth 最平滑淡入淡出
  "editor.cursorBlinking": "blink",
  //启用平滑插入动画
  "editor.cursorSmoothCaretAnimation": "on",
  //显示行号：绝对值(还有相对行号) on 显示行号 relative 相对行号
  "editor.lineNumbers": "on",
  //是否显示行号边距(如果不显示配置时没有编辑图标)
  "editor.glyphMargin": true,
  //启用代码折叠
  "editor.folding": true,
  //在编辑区视图边界换行
  "editor.wordWrap": "wordWrapColumn",
  //换行宽度
  "editor.wordWrapColumn": 100,
  //关闭自动检查，直接将缩进和tab设置为2个字符
  "editor.detectIndentation": false,
  // tab的空格数，默认4
  "editor.tabSize": 2,
  //缩略图设置
  "editor.minimap.enabled": false,
  "editor.minimap.autohide": true,
  "editor.minimap.maxColumn": 100,
  "editor.minimap.size": "fit",
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": true,
  //启用后，可以拖放移动选中的内容
  "editor.dragAndDrop": true,
  //控制编辑器是否应呈现空白字符
  "editor.renderWhitespace": "selection",
  //插入Tab键时替换为空格，设置editor.detectIndentation后失效
  "editor.insertSpaces": true,
  //没有选中内容时复制当前行
  "editor.emptySelectionClipboard": true,
  //在一定数量的等宽字符后显示垂直标尺，若数组为空，则不绘制标尺
  "editor.rulers": [
    80,
    100,
    120
  ],
  // 控制输入时是否应自动显示建议
  "editor.quickSuggestions": {
    //true:弹窗提示 inline:显示为虚拟文本 false:不显示
    "strings": "inline",
    "comments": "inline",
    "other": true,
  },
  //显示提示时优先使用光标附近的单词
  "editor.suggest.localityBonus": true,
  //建议(智能提示)显示延迟时间(毫秒)，太快容易误触发代码段
  "editor.quickSuggestionsDelay": 5,
  //在智能提示没显示时知道代码段缩写直接按tab键展开
  //如果禁用下面2项设置无法使用
  "editor.tabCompletion": "on",
  //显示智能提示的状态栏(快捷键指示说明)
  "editor.suggest.showStatusBar": false,
  //建议显示为虚拟文本，类似Copilot，如果建议符合预期按tab键确定
  //https://github.com/microsoft/vscode/issues/126375
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "editor.parameterHints.enabled": true,
  //确定智能补全提示后是否覆盖当前单词  insert插入不覆盖  replace覆盖单词
  "editor.suggest.insertMode": "replace",
  //代码段的名称是随智能提示一起显示，还是只显示在详细信息面板中。 true:一起显示
  //详细信息面板有可能是隐藏的，需要用鼠标点击一下代码段的名称显示出来
  //详细信息面板的位置默认在右侧，可以缩小编辑器窗口详情面板就随着自动固定到下面了
  "editor.suggest.showInlineDetails": true,
  //在活动代码段内是否启用提示建议
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  //智能提示选择项 first:固定顺序始终选中第一项
  //recentlyUsedByPrefix:最近使用过的前缀优先匹配
  "editor.suggestSelection": "first",
  //代码段显示及排列位置
  //top:在其它建议项上面显示代码段(如果变量前缀都匹配但还是选中代码段不方便)
  //inline:在其它建议中间，如果变量前缀都匹配以变量优先
  "editor.snippetSuggestions": "inline",
  "editor.suggest.showInterfaces": true,
  //滚动时使用动画
  "editor.smoothScrolling": true,
  //自动输入结束括号
  "editor.autoClosingBrackets": "always",
  //删除括号时自动删除结束括号
  "editor.autoClosingDelete": "always",
  //选中括号时突出显示匹配的括号
  "editor.matchBrackets": "always",
  //括号突出显示颜色（自动分配不同颜色）
  "editor.bracketPairColorization.enabled": false,
  //每个括号有独立的颜色池
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  //突出显示活动括号
  "editor.guides.highlightActiveBracketPair": true,
  //滚动时置顶当前作用域函数
  "editor.stickyScroll.enabled": true,
  //是否显示缩进参考线
  "editor.guides.indentation": false,
  //是否显示括号参考线 "active" 仅活动代码块显示，true 显示，false 不显示
  "editor.guides.bracketPairs": "false",
  "editor.guides.bracketPairsHorizontal": false,
  //禁用后，按住Ctrl+滑轮 不会缩放字体
  "editor.mouseWheelZoom": false,
  //多光标快捷键:ctrl(默认Alt)
  "editor.multiCursorModifier": "ctrlCmd",
  //启用列选择。启用后向下选择自动列模式，按 Alt再选择为普通模式。如果禁用，使用 Alt+Shift 进行列选择
  "editor.columnSelection": false,
  //双击选中文本的分隔符，加上中文分隔符（、，。“”？！） 去除 -
  //默认："`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.（、，。“”？！）<>/?",
  //CJK 字符(中日韩)不使用断行，保持在同一行上(1.74版本新增)
  "editor.wordBreak": "keepAll",
  //重命名之前预览变更
  "editor.rename.enablePreview": true,
  // 重命名时自动修改tag 替代 Auto Rename Tag 插件
  "editor.linkedEditing": true,
  // 配置自动关闭tag 替代 Auto Close Tag 插件
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "editor.autoClosingQuotes": "always",
  //鼠标悬停提示上时全部内容一直可见(不用滚动内容)
  "editor.hover.sticky": true,
  //v1.70可以使用命令或快捷键手动创建折叠区域 创建:Ctrl+K Ctrl+， 删除:Ctrl+K Ctrl+.
  // >create manual folding range from selection
  // >remove manual folding ranges
  //是否显示行号槽上的折叠控件
  "editor.showFoldingControls": "mouseover",
  //粘贴内容时自动调整缩进
  "editor.autoIndent": "advanced",
  //粘贴内容时自动格式化
  "editor.formatOnPaste": true,
  //代码编辑保存时自动格式化
  "editor.formatOnSave": true,
  //保存时自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  //高亮显示非ASCII字符
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true
  },
  //搜索结果展现形式， list:列表， tree:树形
  "search.defaultViewMode": "list",
  //让函数(名)和后面的大括号之间加个空格
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  //启用后，将在保存文件时剪裁尾随空格
  "files.trimTrailingWhitespace": true,
  //打开文件自动解析文件编码
  "files.autoGuessEncoding": true,
  //光标总是自动乱跳，这是自动格式化问题
  "files.autoSaveDelay": 5000,
  //启用自定义文件对话框
  "files.simpleDialog.enable": true,
  //常用暗色主题：
  //一等: Snazzy、Night Owl、Catppuccin Frappé、Catppuccin Macchiato、Andromeda Mariana - Bordered、
  //Nightfox、Nord Deep、Tokyo Night Storm、grapevine
  //freeCodeCamp Dark Theme、One Monokai、Adapta Nokto、Default Dark+、
  //Starfall Palenight、DartPad Candy、Oceanic Next (dimmed bg)、
  // 二等: GitHub Dark Dimmed、GitHub Blue、Cobalt2、Dracula Soft、Rosé Pine Moon、UrbanForge、
  // Atom One Dark、Gatito Theme、vuesion、Mariana、Nord、Jetbrains Fleet、
  // Penumbra Dark Contrast+、Dark Neon Theme(SM)、aclear-dark
  // Slack Theme Dark Mode、Slack Theme Aubergine Dark、Tailwind Dark Gray、Peacock、
  // Kanagawa、Mystic Classic、
  // 未来极客风： SynthWave Refined、Cybervision
  // 亮色主题： Community Material Theme Lighter High Contrast（Material Theme主题包）
  // Bluloco Light、Brackets Light Pro、Vitesse Light、Slack Theme Hoth、
  // Atom One Light、Soda、PlainTheme、Catppuccin Latte
  // 主题在线预览： https://vscodethemes.com
  //文件图标 升级定制版：Atom Material Icons
  "workbench.iconTheme": "material-icon-theme",
  //文件夹图标类型
  "material-icon-theme.folders.theme": "specific",
  //default:#A5D6F5 亮蓝：#79C0FF 浅蓝：#42a5f5 深灰色：#8695b7
  "material-icon-theme.folders.color": "#42a5f5",
  //隐藏文件夹旁边的连线和箭头
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.editor.wrapTabs": false,
  //主题颜色是否语义(包名函数包名、常量、参数等)突出显示
  "editor.semanticHighlighting.enabled": true,
  //以下主题已处理好不需要开启： Nord、Mariana、Dracula
  // {Syntax Highlighter}插件需要启用，增强主题配色显示
  // 自定义主题颜色
  "editor.semanticTokenColorCustomizations": {
    // "enabled": true, // enable for all themes
    "[Default Dark+]": {
      "enabled": false // enable for a particular theme
    },
    "[Jetbrains Fleet]": {
      "enabled": true //启用后可以高亮Go包名
    },
    "[freeCodeCamp Dark Theme]": {
      // 正常情况关键字正常，但是类型没有颜色
      // 开启semanticHighlighting.enabled 后，类型颜色显示正常，但是关键字不正常了
      // 再关闭"ui.semanticTokens": false就一切正常.可以开启并重写关键字颜色
      // 需要启用 Syntax Highlighter 插件代替 gopls ui.semanticTokens解析
      "enabled": true,
      "rules": {
        "keyword": "#DBB8FF",
      }
    },
    "[Snazzy]": {
      //editor.semanticHighlighting.enabled 启用后关键字颜色不正常
      //正常颜色：https://marketplace.visualstudio.com/items?itemName=SnazzyTheme.snazzy-vscode
      "enabled": true,
      "rules": {
        //开启semanticHighlighting后变成深黄了 #ffae57
        "keyword": "#5ccfe6", //默认紫色：#c3a6ff
        "type": "#c3a6ff", //深黄：#ffae57 设置后统一内置类型和自定义类型
        "function": "#ffae57", //默认淡蓝色：#5ccfe6
        "method": "#ffae57",
        "operator": "#ef6b73",
        "number": "#f78c6c", //默认紫色和type颜色冲突
        "*.readonly": "#e9b1e9" //Mariana 关键字:#c695c6
      }
    },
    "[Night Owl]": {
      "enabled": true,
      "rules": {
        "namespace": "#ffcb8b", //包名 黄色:#ffcb8b
        "variable": "#bec5d4", //变量名 默认淡绿:#B2CCD6 白色:#d6deeb
        "*.readonly": "#7fdbca" //常量名
      }
    },
    "[Mariana]": {
      "enabled": true,
      "rules": {
        "variable": "#D8DEE9", //变量名，高亮后不正确了
        // "function": "#6699cc"
      }
